{{ blok._editable|raw }}
<div class="c-page-card u-relative u-full-height">
    <div class="c-page-card__thumbnail">
        <img class="u-full-width" src="{{ item.image|resize('580x330') }}"
             alt="{% if blok.image.alt %}{{ blok.image.alt }}{% else %}{{ blok.title }}{% endif %}"
        >
    </div>
    <div class="c-page-card__info">
        <h2 class="c-page-card__info-title">{{ item.title }}</h2>
        <p class="c-page-card__info-text">{{ item.text }}</p>
        {% if item.link and item.link_title %}
            {% if blok.cta_color == 'light' %}
                <a href="{{ item.link }}" title="{% if blok.image.alt %}{{ blok.image.alt }}{% else %}{{ blok.title }}{% endif %}"
                class="c-page-card__info-cta btn btn-inverse btn-info u-expand gtm-grid-item">{{ item.link_title }}</a>
            {% else %}
                <a href="{{ item.link }}" title="{% if blok.image.alt %}{{ blok.image.alt }}{% else %}{{ blok.title }}{% endif %}"
                class="c-page-card__info-cta btn btn-info u-expand gtm-grid-item">{{ item.link_title }}</a>
            {% endif  %}
        {% endif %}
    </div>
</div>
